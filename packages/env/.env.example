# ==========================================================================
# Master .env for all backend services — run `pnpm env:copy` to distribute.
# ==========================================================================

NODE_ENV=development

# ── Auth Server ────────────────────────────────────────────────────────────
AUTH_SERVER_URL=http://localhost:5000
AUTH_SERVER_PORT=5000

# ── Main Server ────────────────────────────────────────────────────────────
MAIN_SERVER_URL=http://localhost:5002
MAIN_SERVER_PORT=5002

# ── Admin Server ───────────────────────────────────────────────────────────
ADMIN_SERVER_URL=http://localhost:5001
ADMIN_SERVER_PORT=5001

# ── Database ───────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_NAME=

# ── Redis ──────────────────────────────────────────────────────────────────
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ── Frontend ───────────────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000

# ── JWT ────────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_TOKEN_EXPIRY_SECONDS=604800
JWT_REFRESH_TOKEN_EXPIRY_SECONDS=2592000

# ── OAuth - GitHub (auth-server only) ──────────────────────────────────────
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ── OAuth - Google (auth-server only) ──────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ── Boot scripts ───────────────────────────────────────────────────────────
EXECUTE_BOOT_SCRIPTS=false

# ── Mail (mail-server only) ────────────────────────────────────────────────
RESEND_API_KEY=
EMAIL_FROM=
EMAIL_FROM_NAME=MERN App

# ── BullMQ Dashboard (sync-server only) ────────────────────────────────────
DASHBOARD_PORT=5005
DASHBOARD_USERNAME=
DASHBOARD_PASSWORD_HASH=
DASHBOARD_JWT_SECRET=
DASHBOARD_JWT_EXPIRY_SECONDS=3600
